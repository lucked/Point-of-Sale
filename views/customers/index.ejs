<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-lg-10">
            <input type="text" class="form-control" placeholder="Search" oninput="queryapi(this.value)">
        </div>
        <div class="col-lg-2">
            <button type="button" class="btn btn-primary center-block" data-toggle="modal" data-target="#newcustomer">
                New customer
            </button>
        </div>
    </div>
    <br>
    <table class="table" id="customertable"></table>
</div>
<!-- Button trigger modal -->
<!-- Modal New Product ! -->
<div class="modal fade" id="newcustomer" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">New customer</h4>
            </div>
            <div class="modal-body">
                <form action="/customers" method="POST">
                    <div class="row">
                        <div class="col-lg-2 pull-right">
                            <div class="form-group">
                                <input type="text" class="form-control" value="1000" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Phonenumber" name="customer[phone]">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Name" name="customer[name]">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="e-mail" name="customer[mail]">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <hr>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <h1 style="color: red;">Google Maps API</h1>
                                <input id="newCustAdd" type="text" class="form-control" placeholder="Adress search">
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="form-group">
                                <input id="route" type="text" class="form-control" placeholder="street" name="customer[street]">
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <input id="street_number" type="text" class="form-control" placeholder="houseumber" name="customer[housenumber]">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <input id="locality" type="text" class="form-control" placeholder="City" name="customer[city]">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <input id="postal_code" type="text" class="form-control" placeholder="zip" name="customer[zipcode]">
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Floor" name="customer[story]">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
